---
import Layout from '../layouts/Layout.astro';
---

<Layout
	title="Thunder Finance"
	description="Thunder.Finance is a mixer that incentives Privacy paying yields"
>
	<div
		class="relative flex min-h-screen items-center justify-center bg-[#171515] text-white"
		style={`background-image: url("/Landing hero.svg"); background-size: cover; background-position: center; background-repeat: no-repeat;`}
	>
		<main class="relative mx-auto flex max-w-5xl items-center justify-center px-6 py-16 sm:py-24">
			<header class="mx-auto max-w-3xl text-center">
				<h1 class="mb-6">
					<img
						src="/logo-header-index.png"
						alt="Thunder Finance"
						class="mx-auto h-16 w-auto sm:h-20 md:h-24"
						loading="lazy"
					/>
				</h1>
				<p class="text-lg font-normal leading-relaxed text-gray-300 sm:text-xl">
					Thunder.Finance is a mixer that incentives Privacy paying yields
				</p>
			</header>
		</main>
	</div>
</Layout>
