---
import Layout from '../layouts/Layout.astro';
---

<Layout
	title="Thunder Finance"
	description="Thunder.Finance is a mixer that incentives Privacy paying yields"
>
	<div class="relative min-h-screen overflow-hidden bg-[#171515] text-white">
		<div
			class="absolute inset-0 bg-cover bg-center bg-no-repeat"
			style={`background-image: url("/Landing%20hero.png");`}
			aria-hidden="true"
		></div>
		<div class="absolute inset-0 bg-gradient-to-b from-black/55 via-black/35 to-black/65" aria-hidden="true"></div>

		<main class="relative z-10 mx-auto flex min-h-screen max-w-6xl flex-col items-center justify-center gap-10 px-6 py-14 text-center">
			<div class="flex flex-col items-center gap-6">
				<img
					src="/logo-header-index.png"
					alt="Thunder Finance logo"
					class="mx-auto h-40 w-auto sm:h-48 md:h-56"
					loading="eager"
					decoding="async"
				/>
				<p class="text-lg font-normal leading-relaxed text-[#FED000] sm:text-xl md:text-2xl">
					A Mixer That Incentives Privacy Paying Yields
				</p>
			</div>

			<div class="flex flex-col items-center gap-6">
				<a
					href="https://web3-thunder-finance-web.vercel.app/"
					target="_blank"
					rel="noreferrer"
					class="inline-flex items-center gap-2 rounded-full bg-[#FED000] px-10 py-3.5 text-lg font-semibold text-black shadow-[0_12px_35px_rgba(254,208,0,0.35)] transition hover:translate-y-[-1px] hover:shadow-[0_16px_45px_rgba(254,208,0,0.45)] active:translate-y-0"
				>
					Join The MiniApp
					<img src="/fire.svg" alt="" aria-hidden="true" class="h-5 w-5" loading="lazy" decoding="async" />
				</a>
				<a
					href="https://github.com/web3thunderfinance"
					target="_blank"
					rel="noreferrer"
					aria-label="GitHub"
					class="flex h-14 w-14 items-center justify-center rounded-full border border-white/30 bg-transparent text-white transition hover:border-white hover:bg-white/10"
				>
					<img src="/github.svg" alt="" aria-hidden="true" class="h-6 w-6" loading="lazy" decoding="async" />
				</a>
			</div>
		</main>
	</div>
</Layout>
